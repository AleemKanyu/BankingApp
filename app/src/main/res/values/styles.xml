<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Circular FABs don't need custom styles unless changing default Material style -->
    <!-- But if needed, here's a basic example -->
    <style name="CustomFABStyle" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="shapeAppearance">@style/CircleShape</item>
    </style>

    <style name="CircleShape" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item> <!-- ensures circle if width == height -->
    </style>
    <style name="CustomDialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:background">@drawable/rounded_box</item>
        <item name="android:windowMinWidthMajor">90%</item>
        <item name="android:windowMinWidthMinor">90%</item>
    </style>

</resources>